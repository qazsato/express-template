{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"],
            "isBuildCommand": false
        },
        {
            "taskName": "build",
            "args": ["run", "dev"],
            "isBuildCommand": true
        },
        {
            "taskName": "watch",
            "args": ["run", "watch"],
            "isBuildCommand": true
        },
        {
            "taskName": "test",
            "args": ["run", "test"],
            "isBuildCommand": false
        }
    ]
}
